{
  "compilerOptions": {
    "outDir": "build/dist",
    "newLine": "CRLF",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017.object", "es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "public",
    "src/setupTests.ts",
    "src/js"
  ]
}
